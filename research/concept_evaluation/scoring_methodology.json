{
  "metadata": {
    "created_date": "2025-08-14",
    "version": "1.0",
    "methodology": "Rigorous 100-point scoring framework for game concept evaluation",
    "data_sources": [
      "market_intelligence/*.json",
      "player_insights/*.json", 
      "industry_insights/*.json",
      "opportunity_analysis/*.json"
    ]
  },
  "scoring_framework": {
    "total_points": 100,
    "scoring_categories": {
      "market_potential": {
        "weight": 30,
        "subcategories": {
          "market_size": {
            "points": 10,
            "scale_definition": {
              "9-10": "TAM >$10B annually, top 3 genre by revenue (Strategy, RPG, Puzzle)",
              "7-8": "TAM $5-10B annually, top 5 genre (Casino, Simulation)",
              "5-6": "TAM $2-5B annually, established genre (Shooter, Action)",
              "3-4": "TAM $1-2B annually, niche but profitable",
              "1-2": "TAM <$1B annually, limited growth potential"
            },
            "evidence_requirements": [
              "Genre revenue data from genre_rankings.json",
              "Market growth rates from market_trends.json",
              "Geographic market size from geographic_analysis.json"
            ]
          },
          "growth_trajectory": {
            "points": 5,
            "scale_definition": {
              "5": "Genre showing +15% YoY growth",
              "4": "Genre showing +5-15% YoY growth", 
              "3": "Genre stable 0-5% growth",
              "2": "Genre declining 0-5%",
              "1": "Genre declining >5%"
            },
            "evidence_requirements": [
              "YoY growth data from genre_rankings.json",
              "Download trends from performance_metrics.json"
            ]
          },
          "competition_intensity": {
            "points": 5,
            "scale_definition": {
              "5": "Low competition, clear market gap identified",
              "4": "Medium competition with differentiation opportunity",
              "3": "High competition but fragmented market",
              "2": "High competition with established leaders",
              "1": "Saturated market with dominant players"
            },
            "evidence_requirements": [
              "Market gaps from market_gaps.json",
              "Competitive analysis from competitive_analysis.json"
            ]
          },
          "revenue_potential_per_player": {
            "points": 10,
            "scale_definition": {
              "9-10": "ARPU >$15/month (Casino, Strategy high-end)",
              "7-8": "ARPU $8-15/month (RPG, Strategy)",
              "5-6": "ARPU $3-8/month (Puzzle, Matching)",
              "3-4": "ARPU $1-3/month (Simulation, Casual)",
              "1-2": "ARPU <$1/month (Hypercasual, Arcade)"
            },
            "evidence_requirements": [
              "ARPU data from performance_metrics.json",
              "Monetization analysis from monetization_analysis.json"
            ]
          }
        }
      },
      "player_alignment": {
        "weight": 25,
        "subcategories": {
          "addresses_pain_points": {
            "points": 10,
            "scale_definition": {
              "9-10": "Directly addresses critical pain points (95+ frequency score)",
              "7-8": "Addresses high-priority pain points (78-94 frequency score)",
              "5-6": "Addresses medium-priority pain points (66-77 frequency score)",
              "3-4": "Addresses low-priority pain points (43-65 frequency score)",
              "1-2": "Does not address identified pain points"
            },
            "evidence_requirements": [
              "Pain point frequency scores from pain_points_analysis.json",
              "Player complaints and quotes from pain_points_analysis.json"
            ]
          },
          "satisfies_unmet_needs": {
            "points": 10,
            "scale_definition": {
              "9-10": "Fulfills critical unmet needs (89+ demand score)",
              "7-8": "Fulfills high-demand needs (78-88 demand score)",
              "5-6": "Fulfills medium-demand needs (68-77 demand score)",
              "3-4": "Fulfills low-demand needs (50-67 demand score)",
              "1-2": "Does not address identified unmet needs"
            },
            "evidence_requirements": [
              "Demand scores from unmet_needs.json",
              "Player requests and quotes from unmet_needs.json"
            ]
          },
          "demographic_appeal": {
            "points": 5,
            "scale_definition": {
              "5": "Appeals to high-value demographics with strong engagement patterns",
              "4": "Appeals to medium-value demographics with good engagement",
              "3": "Appeals to broad demographics with average engagement",
              "2": "Appeals to low-value demographics or narrow audience",
              "1": "Limited demographic appeal"
            },
            "evidence_requirements": [
              "Demographic preferences from demographic_insights.json",
              "Retention patterns from performance_metrics.json"
            ]
          }
        }
      },
      "competitive_advantage": {
        "weight": 20,
        "subcategories": {
          "innovation_vs_existing": {
            "points": 10,
            "scale_definition": {
              "9-10": "Revolutionary approach, no direct competitors",
              "7-8": "Significant innovation, 1-2 weak competitors",
              "5-6": "Meaningful differentiation, several competitors",
              "3-4": "Minor differentiation, many competitors",
              "1-2": "Me-too approach, saturated competition"
            },
            "evidence_requirements": [
              "Innovation gaps from innovation_opportunities.json",
              "Competitive landscape from market_gaps.json"
            ]
          },
          "defensibility_moat": {
            "points": 5,
            "scale_definition": {
              "5": "Strong network effects, high switching costs, technology barriers",
              "4": "Some defensibility through community or data advantages",
              "3": "Moderate barriers through execution or brand",
              "2": "Low barriers, easily replicable",
              "1": "No meaningful barriers to entry"
            },
            "evidence_requirements": [
              "Technology barriers from technology_roadmaps.json",
              "Market dynamics from strategic_opportunities.json"
            ]
          },
          "first_mover_advantage": {
            "points": 5,
            "scale_definition": {
              "5": "Clear first-mover opportunity with timing advantages",
              "4": "Good timing advantage in emerging trend",
              "3": "Some timing benefit, moderate competition",
              "2": "Late to market but still opportunity",
              "1": "Following established trends"
            },
            "evidence_requirements": [
              "Market timing from strategic_opportunities.json",
              "Technology readiness from technology_roadmaps.json"
            ]
          }
        }
      },
      "development_feasibility": {
        "weight": 15,
        "subcategories": {
          "technical_complexity": {
            "points": 5,
            "scale_definition": {
              "5": "Simple implementation, proven technologies",
              "4": "Moderate complexity, established tech stack",
              "3": "Complex but manageable with current resources",
              "2": "High complexity requiring new capabilities",
              "1": "Extremely complex, uncertain feasibility"
            },
            "evidence_requirements": [
              "Technology readiness from technology_roadmaps.json",
              "Implementation timelines from strategic_opportunities.json"
            ]
          },
          "time_to_market": {
            "points": 5,
            "scale_definition": {
              "5": "3-6 months to launch",
              "4": "6-9 months to launch",
              "3": "9-12 months to launch",
              "2": "12-18 months to launch",
              "1": "18+ months to launch"
            },
            "evidence_requirements": [
              "Development timelines from strategic_opportunities.json",
              "Technology implementation phases from technology_roadmaps.json"
            ]
          },
          "resource_requirements": {
            "points": 5,
            "scale_definition": {
              "5": "Minimal resources, can leverage existing capabilities",
              "4": "Moderate resources, some new hires needed",
              "3": "Significant resources, new team required",
              "2": "High resource investment, major new capabilities",
              "1": "Extremely high investment, uncertain ROI"
            },
            "evidence_requirements": [
              "Investment requirements from strategic_opportunities.json",
              "Resource estimations from implementation paths"
            ]
          }
        }
      },
      "strategic_fit": {
        "weight": 10,
        "subcategories": {
          "platform_optimization": {
            "points": 5,
            "scale_definition": {
              "5": "Optimized for high-value platforms (iOS premium, cross-platform)",
              "4": "Good platform fit with revenue optimization",
              "3": "Standard platform approach",
              "2": "Limited platform optimization",
              "1": "Poor platform fit for monetization"
            },
            "evidence_requirements": [
              "Platform preferences from monetization_analysis.json",
              "Cross-platform opportunities from unmet_needs.json"
            ]
          },
          "monetization_alignment": {
            "points": 5,
            "scale_definition": {
              "5": "Aligned with ethical monetization trends, multiple revenue streams",
              "4": "Good monetization fit with current best practices",
              "3": "Standard monetization approach",
              "2": "Limited monetization options",
              "1": "Poor monetization fit or reliance on declining models"
            },
            "evidence_requirements": [
              "Monetization trends from monetization_analysis.json",
              "Ethical monetization demand from market_gaps.json"
            ]
          }
        }
      }
    }
  },
  "scoring_interpretation": {
    "90_100": {
      "classification": "Exceptional Opportunity",
      "action": "Immediate development priority",
      "characteristics": "Revolutionary concept addressing critical market gaps with strong feasibility"
    },
    "80_89": {
      "classification": "High Potential",
      "action": "Priority consideration for development",
      "characteristics": "Strong opportunity with good market fit and manageable execution risk"
    },
    "70_79": {
      "classification": "Good Opportunity",
      "action": "Pipeline development consideration",
      "characteristics": "Solid concept with market potential, may need refinement"
    },
    "60_69": {
      "classification": "Moderate Potential",
      "action": "Watch and wait, require significant improvement",
      "characteristics": "Some market opportunity but significant challenges"
    },
    "below_60": {
      "classification": "Low Priority",
      "action": "Rejection unless major pivots possible",
      "characteristics": "High risk, low reward, or poor market fit"
    }
  },
  "validation_requirements": {
    "minimum_evidence_per_score": 3,
    "required_data_citations": [
      "Specific data points from research files",
      "Comparable game examples with performance data",
      "Market trend validation",
      "Player demand evidence"
    ],
    "scoring_consistency": "All scores must be justified with quantitative data where possible",
    "competitive_benchmarking": "Each concept must be compared against 2-3 existing market examples"
  }
}